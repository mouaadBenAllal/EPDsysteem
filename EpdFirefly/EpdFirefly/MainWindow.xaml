<Window x:Class="EpdFirefly.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EpdFirefly"
        mc:Ignorable="d"
        Title="Login" Height="600" Width="500" FontSize="14" Background="#2e3137"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>

        <Grid.Effect>
            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="1" />
        </Grid.Effect>
        <Border Background="#dcecf0" CornerRadius="5" Margin="20,20,20,19.5" Grid.RowSpan="2">
            <StackPanel x:Name="loginstackpanel" Margin="20">
                <Label Content="Login" FontSize="25" HorizontalAlignment="Center" FontWeight="Bold" />
                <Separator />
                <Label Content="Username" />
                <TextBox x:Name="Username" FontSize="18" />
                <Label Content="Password" />
                <PasswordBox x:Name="Password" FontSize="18" />
                <Button x:Name="login" Content="Login" Margin="60 10" FontSize="18" Height="37" />
                <Button x:Name="register" Content="Registreer" Margin="60 10" FontSize="18" Height="37" />
            </StackPanel>
        </Border>
    </Grid>
</Window>